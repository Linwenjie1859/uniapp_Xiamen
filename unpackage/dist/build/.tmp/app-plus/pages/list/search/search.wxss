.header {
	background-color: #51c77d;
	width: 100%;
	height: 170rpx;
	position: fixed;
	top: 0;
	z-index: 10000;
}
.header .black {
	width: 35rpx;
	height: 35rpx;
	position: absolute;
	left: 25rpx;
	bottom: 45rpx;
}
.header .search {
	width: 35rpx;
	height: 35rpx;
	position: absolute;
	right: 25rpx;
	bottom: 45rpx;
}
.input_view {
	width: 580rpx;
	height: 70rpx;
	background-color: rgba(255, 255, 255, 0.5);
	border-radius: 10rpx;
	position: absolute;
	left: 50%;
	margin-left: -290rpx;
	bottom: 25rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.input_view input {
	width: 580rpx;
	text-align: center;
}
/* 历史搜索 */
.history {
	margin-top: 170rpx;
	width: 100%;
}
.history .title {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	width: 700rpx;
	height: 100rpx;
	margin: 0 auto;
}
.history .title image {
	width: 35rpx;
	height: 35rpx;
}
.history .history_list {
	width: 700rpx;
	margin: 0 auto;
}
.history .history_list text {
	display: inline-block;
	padding: 0rpx 20rpx;
	margin-right: 25rpx;
	margin-bottom: 25rpx;
	border: 1rpx solid #e5e5e5;
	border-radius: 25rpx;
}

