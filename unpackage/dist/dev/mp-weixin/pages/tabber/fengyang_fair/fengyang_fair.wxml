<view class="content"><view class="header"><view data-event-opts="{{[['tap',[['search',['$event']]]]]}}" class="input_view" bindtap="__e"><text class="font-28 gray">搜索商品</text></view></view><view class="fair_list"><view class="title_list font-28 white"><view data-event-opts="{{[['tap',[['changeAllRank',['$event']]]]]}}" class="text" bindtap="__e"><text class="{{[allOrder==0?'':'orange']}}">综合</text><block wx:for="{{3}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{allOrder==index}}"><image src="{{'/static/sort'+index+'.png'}}"></image></block></block></view><view data-event-opts="{{[['tap',[['changeSalesRank',['$event']]]]]}}" class="text" bindtap="__e"><text class="{{[salesOrder==0?'':'orange']}}">销量</text><block wx:for="{{3}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{salesOrder==index}}"><image src="{{'/static/sort'+index+'.png'}}"></image></block></block></view><view data-event-opts="{{[['tap',[['changePriceRank',['$event']]]]]}}" class="text" bindtap="__e"><text class="{{[priceOrder==0?'':'orange']}}">价格</text><block wx:for="{{3}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{priceOrder==index}}"><image src="{{'/static/sort'+index+'.png'}}"></image></block></block></view></view></view><view class="category-list"><scroll-view class="left font-28" scroll-y="true"><block wx:for="{{categoryList}}" wx:for-item="category" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['showCategory',[index,'$0'],[[['categoryList','id',category.id,'id']]]]]]]}}" class="{{['row',index==showCategoryIndex?'on':'']}}" bindtap="__e"><view class="text"><view class="block"></view>{{''+category.cate_name+''}}</view></view></block></scroll-view><scroll-view class="right" scroll-y="true"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="list_view"><image src="{{item.image}}" mode data-id="{{item.id}}" data-event-opts="{{[['tap',[['goodeDetails',['$event']]]]]}}" bindtap="__e"></image><view class="list_right"><view class="list_top" data-id="{{item.id}}" data-event-opts="{{[['tap',[['goodeDetails',['$event']]]]]}}" bindtap="__e"><text class="font-28 text_limit">{{item.store_name}}</text><text class="font-28 gray text_limit_two" style="height:80rpx;">{{item.store_info}}</text></view><text class="font-24 static">特价优惠</text><view class="list_down"><view class="down_text"><text class="font-28 orange">{{"￥"+item.price}}</text><text class="font-24 gray old">{{"￥"+item.ot_price}}</text></view><image class="img_40" src="/static/add_shop_icon.png" mode data-event-opts="{{[['tap',[['touchOnGoods',['$event','$0'],[[['goodsList','',index,'id']]]]]]]}}" bindtap="__e"></image></view></view></view></block></scroll-view><view data-event-opts="{{[['tap',[['cart_detail',['$event']]]]]}}" class="cart" bindtap="__e"><text class="num">{{carNum}}</text><image class="img_40" src="/static/shop_cart_gray.png" mode></image></view><view hidden="{{!(hide_good_box)}}" class="good_box" style="{{('left:'+bus_x+'px;top:'+bus_y+'px')}}"></view></view></view>