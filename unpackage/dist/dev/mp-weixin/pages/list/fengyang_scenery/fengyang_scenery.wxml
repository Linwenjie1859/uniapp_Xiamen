<view class="content"><block wx:for="{{articleList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="scenery_list"><image class="scenery_pic" src="{{item.image}}" mode></image><view class="list_view"><block wx:for="{{item.list}}" wx:for-item="article" wx:for-index="index" wx:key="index"><view class="scenery" data-id="{{article.id}}" data-event-opts="{{[['tap',[['detail',['$event']]]]]}}" bindtap="__e"><image class="scenery_img" src="{{article.image_input[0]}}" mode></image><view class="info_list"><text class="font-32 text_limit">{{article.title}}</text><text class="font-28 text_info">{{article.synopsis}}</text><view class="see_list"><text class="font-24 gray">{{article.add_time}}</text><view class="num"><image src="/static/see.png" mode></image><text class="font-24 gray">{{article.visit}}</text></view></view></view></view></block></view><text class="more font-28 gray" data-id="{{item.id}}" data-event-opts="{{[['tap',[['getList',['$event']]]]]}}" bindtap="__e">查看更多></text></view></block></view>